<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".activity_petprofile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Profile"
                android:fontFamily="@font/montserrat_reg"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:textColor="@color/white" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="DOGS"
               android:textStyle="bold"
               android:textAlignment="center"
               android:fontFamily="@font/montserrat_reg"
               android:layout_marginTop="8dp"
               android:textSize="40sp"
               android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_profile">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="35dp"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/background_opaque">

                <TextView
                    android:id="@+id/petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textSize="30sp"
                    android:textColor="@color/secondary_purple"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Characteristic, behavior, \nand hobbies of pet"
                    android:textSize="18sp"
                    android:textColor="@color/secondary_purple"
                    android:layout_below="@id/petName"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/profile"
                    android:layout_alignParentRight="true">
                </ImageView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="35dp"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/background_opaque">

                <TextView
                    android:id="@+id/petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textSize="30sp"
                    android:textColor="@color/secondary_purple"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Characteristic, behavior, \nand hobbies of pet"
                    android:textSize="18sp"
                    android:textColor="@color/secondary_purple"
                    android:layout_below="@id/petName"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/profile"
                    android:layout_alignParentRight="true">
                </ImageView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>

