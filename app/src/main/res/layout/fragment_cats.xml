<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCat"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/card_dashboard">

            <ImageView
                android:id="@+id/cat_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="#E5E4E2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/cat" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_cat_name"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="Name:"
                        android:textSize="15sp" />
                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Cat's Name"
                    android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_cat_age"
                        android:layout_width="70dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="Age:"
                        android:textSize="15sp" />
                <TextView
                    android:id="@+id/cat_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Cat's Age"
                    android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_cat_sex"
                        android:layout_width="70dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="Sex:"
                        android:textSize="15sp" />
                <TextView
                    android:id="@+id/cat_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Cat's Sex"
                    android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_cat_breed"
                        android:layout_width="70dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="Breed:"
                        android:textSize="15sp" />
                <TextView
                    android:id="@+id/cat_breed"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Breed"
                    android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>
