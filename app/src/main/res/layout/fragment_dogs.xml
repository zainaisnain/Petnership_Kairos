<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDog"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/card_dashboard">

            <ImageView
                android:id="@+id/dog_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="#DA8EE7"
                android:layout_marginLeft="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/dog" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_dog_name"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Name"
                        android:textColor="@color/dark_purple"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                <TextView
                    android:id="@+id/dog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="#1D102C"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Dog's Name"
                    android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_dog_age"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Birthday"
                        android:textColor="@color/dark_purple"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                <TextView
                    android:id="@+id/dog_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="#1D102C"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Dog's Age"
                    android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_dog_sex"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Sex"
                        android:textColor="@color/dark_purple"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                <TextView
                    android:id="@+id/dog_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="#1D102C"

                    android:fontFamily="@font/montserrat_reg"
                    android:text="Dog's Sex"
                    android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_dog_breed"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Age"
                        android:textColor="@color/dark_purple"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                <TextView
                    android:id="@+id/dog_breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:textColor="#1D102C"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Breed"
                    android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
