<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8A4D4"
    tools:context=".AdopterEdit">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/scrollview_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Adopter Information"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="25sp"
                android:textColor="#371576"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_fname_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="First Name"/>

            <TextView
                android:id="@+id/txt_lname_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="Last Name" />

            <TextView
                android:id="@+id/txt_username_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Username"
                android:paddingLeft="10dp" />


            <EditText
                android:id="@+id/txt_contact_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="Contact Number" />

            <EditText
                android:id="@+id/txt_street_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="Street Address" />

            <EditText
                android:id="@+id/txt_city_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="City" />

            <EditText
                android:id="@+id/txt_province_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="Province" />


            <EditText
                android:id="@+id/txt_country_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="Country" />


            <EditText
                android:id="@+id/txt_gender_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="Gender" />


            <EditText
                android:id="@+id/txt_birthday_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:hint="Birthday (mm/dd/yyyy)"
                android:inputType="date" />

            <ImageView
                android:id="@+id/iv_image_adopter_edit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/upload_image_btn_edit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="#C0C0C0"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Upload" />

            <Button
                android:id="@+id/btn_submit_adopter_edit"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#371576"
                android:text="Submit" />

            <Button
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:backgroundTint="#AC94F4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Cancel" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>