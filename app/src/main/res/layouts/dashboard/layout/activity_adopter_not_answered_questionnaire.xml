<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3B1E1"
    tools:context=".AdopterNotAnsweredQuestionnaire"
    android:id="@+id/adopter_not_answered">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="-38dp"
        tools:layout_editor_absoluteY="236dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="745dp"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="354dp"
                    android:layout_height="560dp"
                    android:background="@drawable/card"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.688">

                    <TextView
                        android:id="@+id/title_unable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/playfairdisplayblack"
                        android:text="Questionnaire has not been answered"
                        android:textColor="#371576"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.048"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/added_msg_not"
                        android:layout_width="279dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/playfairdisplayblack"
                        android:text="Please answer questionnaire first in order to proceed with adoption."
                        android:gravity="center"
                        android:textColor="#371576"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.702" />

                    <ImageView
                        android:id="@+id/success_added_check"
                        android:layout_width="283dp"
                        android:layout_height="259dp"
                        android:contentDescription="success"
                        android:src="@drawable/ic_warning"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.535"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.305"
                        tools:ignore="ImageContrastCheck" />

                    <Button
                        android:id="@+id/start_answering"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button1"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="Start Answering"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        app:backgroundTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.845" />

                    <Button
                        android:id="@+id/cancel_answering"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:background="#808080"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="Cancel"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        app:backgroundTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.968" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/loginbutton4"
                    android:layout_width="111dp"
                    android:layout_height="110dp"
                    android:contentDescription="peternship logo"
                    android:src="@drawable/petnership_logo_colored"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.048" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>