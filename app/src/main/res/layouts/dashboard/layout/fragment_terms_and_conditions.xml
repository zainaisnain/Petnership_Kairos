<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/adoptionForm_TAndC"
    tools:context=".TermsAndConditions">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="#0000"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/scrollview_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tandctitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adoption Terms and Conditions"
                android:fontFamily="@font/playfairdisplayblack"
                android:textSize="25sp"
                android:textColor="#371576"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tandc1"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:fontFamily="@font/marmelad_regular"
                android:gravity="center"
                android:text="By ticking this, you agree that pet ownership is a commitment, and getting a pet from a shelter is not an activity that
should be done out of haste. Rather, it requires careful consideration of factors in your life
such as your disposition, living space, availability schedule, interaction capabilities, family type,
health conditions, and personal resources for each pet has its own different needs that ought to
be met. Pet care entails utmost responsibility on your side as adopter."
                android:textAlignment="center"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:fontFamily="@font/marmelad_regular"
                android:gravity="center"
                android:text="By applying, you understand that your application is still pending approval and currently under review by the shelter you have applied to get an adoption from, you will be contacted by the shelter's representatives and will be scheduled to be interviewed by them for further assessment, your application may be rejected or accepted depending on the shelter's own metrics, standards, and evaluation."
                android:textAlignment="center"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:fontFamily="@font/marmelad_regular"
                android:gravity="center"
                android:text="Having matched with your pet from the registered shelters in PETNERSHIP, you are submitting an adoption form that legitimizes that you assume full responsibility over the pet such as providing it with love, adequate food, health care, and shelter and overseeing its
overall well-being."
                android:textAlignment="center"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:fontFamily="@font/marmelad_regular"
                android:gravity="center"
                android:text="Moreover, you are also aware and commit to strictly upholding and following the Republic Act 8485 or the AN ACT TO PROMOTE ANIMAL WELFARE IN THE PHILIPPINES, OTHERWISE KNOWN AS 'THE ANIMAL WELFARE ACT OF 1998' - all the inclusions, clauses, and terms stated therein. You understand that there will be repercussions should your actions reflect failure to adhere to the law."
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/agree_terms_adoption_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Agree"/>


            <EditText
                android:id="@+id/intentions_adopter"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="200dp"
                android:height="40dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Reason for adopting"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/btn_submit_adopter"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#371576"
                android:text="Submit"/>

            <Button
                android:id="@+id/adopterRegisterCancel"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:backgroundTint="#FF0000"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Cancel" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>