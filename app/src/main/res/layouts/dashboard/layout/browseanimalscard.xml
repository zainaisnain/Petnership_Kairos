<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAnimal"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/card_dashboard">
=
            <ImageView
                android:id="@+id/pet_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="#DA8EE7"
                android:layout_marginLeft="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/cat_dog"
                />
            <LinearLayout
                android:id="@+id/compatibility_parent_layout"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pet_name_label"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Name"
                        android:textColor="@color/dark_purple"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                <TextView
                    android:id="@+id/per_pet_name_title"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="#1D102C"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Pet's Name"
                    android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pet_birthday_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/dark_purple"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Birthday"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                <TextView
                    android:id="@+id/pet_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="#1D102C"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Pet's Birthday"
                    android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pet_sex_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/dark_purple"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Sex"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                <TextView
                    android:id="@+id/pet_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1D102C"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/montserrat_reg"
                    android:text="Pet's Sex"
                    android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pet_breed_label"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/dark_purple"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Breed"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/pet_breed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="#1D102C"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="Pet's Breed"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/compatibility_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pet_compatibility_label"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/dark_purple"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Compatibility"
                        android:textStyle="bold"
                        android:textSize="13sp"  />
                    <TextView
                        android:id="@+id/pet_compatibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="#1D102C"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="%"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
