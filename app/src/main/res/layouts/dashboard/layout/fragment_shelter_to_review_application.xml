                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/adoptionForm_petAge"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="placeholder"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
